---
import type { ComponentProps } from "astro/types";

export enum Proficiency {
  Basic = 1,
  Intermediate,
  Advanced,
  Expert,
}

export enum LanguageProficiency {
  Basic = 1,
  Intermediate,
  Fluent,
  Native,
}

interface Props<T> {
  label: string;
  proficiency?: T;
}
const { label, proficiency = 0 } = Astro.props;
export type SkillProps<T> = ComponentProps<typeof Skill<T>>;
---

<li class="skill flex items-center">
  <div class="skill__label mr-2.5">{label}</div>
  {
    proficiency > 0 && (
      <div class="skill__proficiency">{Proficiency[proficiency]}</div>
    )
  }
</li>
